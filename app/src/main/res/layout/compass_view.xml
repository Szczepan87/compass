<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/compass_rose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/compass_rose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/azimuth_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="200dp"
        android:src="@drawable/ic_baseline_arrow_drop_up_24"
        app:layout_constraintBottom_toBottomOf="@+id/compass_rose"
        app:layout_constraintEnd_toEndOf="@+id/compass_rose"
        app:layout_constraintStart_toStartOf="@+id/compass_rose"
        app:layout_constraintTop_toTopOf="@+id/compass_rose" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/north_arrow_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_northward_arrow"
        app:layout_constraintBottom_toTopOf="@+id/compass_rose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>